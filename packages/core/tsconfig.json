{
    "compilerOptions": {
        "target": "ESNext", // Use the latest ECMAScript version
        "module": "ESNext", // Use ES modules (import/export)
        "moduleResolution": "node", // Use Node.js style module resolution
        "outDir": "dist", // output all files to dist/

        "paths": {
            "@/*": ["./src/*"]
        },

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"] // "Only look at files inside the src/ folder when compiling or generating declarations."
}
